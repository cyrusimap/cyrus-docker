FROM debian:squeeze
MAINTAINER Cyrus Foundation <docker@cyrus.foundation>
RUN echo "deb http://obs.kolabsys.com/repositories/Kolab:/Development/Debian_6.0/ ./" > /etc/apt/sources.list.d/kolab.list
ADD http://obs.kolabsys.com/repositories/Kolab:/Development/Debian_6.0/Release.key /root/release.key
RUN apt-key add /root/release.key
RUN apt-get update && apt-get -y install \
    autoconf \
    automake \
    autotools-dev \
    bison \
    build-essential \
    comerr-dev \
    debhelper \
    flex \
    git \
    gperf \
    groff \
    heimdal-dev \
    libdb-dev \
    libglib2.0-dev \
    libical-dev \
    libjansson-dev \
    libldap2-dev \
    libpam0g-dev \
    libpcre3-dev \
    libsasl2-dev \
    libsnmp-dev \
    libsqlite3-dev \
    libssl-dev \
    libtool \
    libxml2-dev \
    libwrap0-dev \
    libzephyr-dev \
    lsb-base \
    perl \
    php5-cli \
    php5-curl \
    pkg-config \
    po-debconf \
    tcl-dev \
    transfig \
    vim \
    xutils-dev \
    zlib1g-dev

WORKDIR /srv
RUN git config --global http.sslverify false && \
    git clone https://git.cyrus.foundation/diffusion/I/cyrus-imapd.git \
    cyrus-imapd.git

WORKDIR /root
ENV PATH /srv/arcanist/bin/:$PATH
ENV IMAGE squeeze
ADD https://cgit.cyrus.foundation/docker/plain/.vimrc /root/.vimrc

WORKDIR /
ADD https://cgit.cyrus.foundation/docker/plain/entrypoint.sh /
ADD https://cgit.cyrus.foundation/docker/plain/functions.sh /
RUN chmod 755 /entrypoint.sh
ENTRYPOINT [ "/entrypoint.sh" ]
