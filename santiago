FROM centos:centos6
MAINTAINER Cyrus Foundation <docker@cyrus.foundation>
RUN yum -y install epel-release
RUN yum clean all
RUN yum -y update
RUN yum -y install \
    automake \
    autoconf \
    bison \
    CUnit-devel \
    cyrus-sasl-devel \
    cyrus-sasl-plain \
    cyrus-sasl-md5 \
    db4-devel \
    flex \
    gcc \
    git \
    gperf \
    glib2-devel \
    gperf \
    groff \
    jansson-devel \
    krb5-devel \
    libical-devel \
    libtool \
    libuuid-devel \
    libxml2-devel \
    make \
    mysql-devel \
    net-snmp-devel \
    openldap-devel \
    openssl-devel \
    patch \
    perl-devel \
    php-cli \
    postgresql-devel \
    sqlite-devel \
    tcp_wrappers \
    valgrind-devel \
    vim-enhanced \
    wget

WORKDIR /srv
RUN git clone https://git.cyrus.foundation/diffusion/I/cyrus-imapd.git \
    cyrus-imapd.git

WORKDIR /root
ENV PATH /srv/arcanist/bin/:$PATH
ENV IMAGE santiago
ADD https://cgit.cyrus.foundation/docker/plain/.bashrc /root/.bashrc
ADD https://cgit.cyrus.foundation/docker/plain/.vimrc /root/.vimrc

WORKDIR /
ADD https://cgit.cyrus.foundation/docker/plain/entrypoint.sh /
ADD https://cgit.cyrus.foundation/docker/plain/functions.sh /
RUN chmod 755 /entrypoint.sh
ENTRYPOINT [ "/entrypoint.sh" ]
