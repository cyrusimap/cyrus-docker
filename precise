FROM ubuntu:precise
MAINTAINER Cyrus Foundation <docker@cyrus.foundation>
RUN apt-get update && apt-get -y install \
    autoconf \
    automake \
    autotools-dev \
    bison \
    build-essential \
    comerr-dev \
    debhelper \
    flex \
    git \
    gperf \
    groff \
    heimdal-dev \
    libdb-dev \
    libglib2.0-dev \
    libical-dev \
    libjansson-dev \
    libldap2-dev \
    libpam0g-dev \
    libpcre3-dev \
    libsasl2-dev \
    libsnmp-dev \
    libsqlite3-dev \
    libssl-dev \
    libtool \
    libxml2-dev \
    libwrap0-dev \
    libzephyr-dev \
    lsb-base \
    perl \
    php5-cli \
    php5-curl \
    pkg-config \
    po-debconf \
    tcl-dev \
    transfig \
    vim \
    wget \
    xutils-dev \
    zlib1g-dev

RUN sed -r -i \
    -e 's/^"([^ ]|\s{2})(.*)$/\1\2/g' \
    -e 's/^set background=dark/"set background=dark/g' \
    /etc/vim/vimrc

WORKDIR /srv
RUN git config --global http.sslverify false && \
    git clone https://git.cyrus.foundation/diffusion/I/cyrus-imapd.git \
    cyrus-imapd.git

WORKDIR /root
ENV PATH /srv/arcanist/bin/:$PATH
ENV IMAGE precise
ADD https://cgit.cyrus.foundation/docker/plain/.bashrc /root/.bashrc
ADD https://cgit.cyrus.foundation/docker/plain/.vimrc /root/.vimrc

WORKDIR /
ADD https://cgit.cyrus.foundation/docker/plain/entrypoint.sh /
ADD https://cgit.cyrus.foundation/docker/plain/functions.sh /
RUN chmod 755 /entrypoint.sh
ENTRYPOINT [ "/entrypoint.sh" ]
