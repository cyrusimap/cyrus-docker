FROM ubuntu:precise
MAINTAINER Cyrus Foundation <docker@cyrus.foundation>
RUN apt-get update && apt-get -y install \
    autoconf \
    automake \
    autotools-dev \
    bash-completion \
    bison \
    build-essential \
    comerr-dev \
    debhelper \
    flex \
    git \
    gperf \
    groff \
    heimdal-dev \
    libbsd-resource-perl \
    libclone-perl \
    libconfig-inifiles-perl \
    libcunit1-dev \
    libdatetime-perl \
    libdb-dev \
    libdigest-sha-perl \
    libencode-imaputf7-perl \
    libfile-chdir-perl \
    libglib2.0-dev \
    libical-dev \
    libio-socket-inet6-perl \
    libio-stringy-perl \
    libjansson-dev \
    libldap2-dev \
    libmysqlclient-dev \
    libnet-server-perl \
    libnews-nntpclient-perl \
    libpam0g-dev \
    libpcre3-dev \
    libsasl2-dev \
    libsnmp-dev \
    libsqlite3-dev \
    libssl-dev \
    libtest-unit-perl \
    libtool \
    libunix-syslog-perl \
    liburi-perl \
    libxml-generator-perl \
    libxml-xpath-perl \
    libxml2-dev \
    libwrap0-dev \
    libzephyr-dev \
    lsb-base \
    net-tools \
    perl \
    php5-cli \
    php5-curl \
    pkg-config \
    po-debconf \
    tcl-dev \
    transfig \
    uuid-dev \
    vim \
    wamerican \
    wget \
    xutils-dev \
    zlib1g-dev

RUN sed -r -i \
    -e 's/^"([^ ]|\s{2})(.*)$/\1\2/g' \
    -e 's/^set background=dark/"set background=dark/g' \
    /etc/vim/vimrc

WORKDIR /srv
RUN git config --global http.sslverify false && \
    git clone https://git.cyrus.foundation/diffusion/I/cyrus-imapd.git \
    cyrus-imapd.git

RUN git config --global http.sslverify false && \
    git clone https://git.cyrus.foundation/diffusion/C/cassandane.git \
    cassandane.git

RUN groupadd -r saslauth ; \
    groupadd -r mail ; \
    useradd -c "Cyrus IMAP Server" -d /var/lib/imap \
    -g mail -G saslauth -s /bin/bash -r cyrus

WORKDIR /root
ENV PATH /srv/arcanist/bin/:$PATH
ENV IMAGE precise
ADD https://cgit.cyrus.foundation/docker/plain/.bashrc /root/.bashrc
ADD https://cgit.cyrus.foundation/docker/plain/.vimrc /root/.vimrc

WORKDIR /
ADD https://cgit.cyrus.foundation/docker/plain/entrypoint.sh /
ADD https://cgit.cyrus.foundation/docker/plain/functions.sh /
RUN chmod 755 /entrypoint.sh
ENTRYPOINT [ "/entrypoint.sh" ]
