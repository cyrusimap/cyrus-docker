FROM fedora:heisenbug
MAINTAINER Cyrus Foundation <docker@cyrus.foundation>
RUN yum clean all && yum -y install \
    automake \
    autoconf \
    bison \
    CUnit-devel \
    cyrus-sasl-devel \
    cyrus-sasl-plain \
    cyrus-sasl-md5 \
    flex \
    gcc \
    git \
    glib2-devel \
    gperf \
    groff \
    jansson-devel \
    krb5-devel \
    libdb-devel \
    libical-devel \
    libtool \
    libuuid-devel \
    libxml2-devel \
    make \
    mysql-devel \
    net-snmp-devel \
    openldap-devel \
    openssl-devel \
    patch \
    perl-devel \
    php-cli \
    postgresql-devel \
    sqlite-devel \
    tcp_wrappers \
    valgrind-devel \
    vim-enhanced \
    wget

WORKDIR /root
RUN echo "export PATH=\$PATH:/srv/arcanist/bin/" >> .bashrc
ADD https://cgit.cyrus.foundation/docker/plain/.vimrc /root/.vimrc

WORKDIR /
ADD https://cgit.cyrus.foundation/docker/plain/entrypoint.sh /
RUN chmod 755 /entrypoint.sh
ENTRYPOINT [ "/entrypoint.sh" ]
