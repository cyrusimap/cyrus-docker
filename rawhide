FROM fedora:rawhide
MAINTAINER Cyrus Foundation <docker@cyrus.foundation>
RUN yum clean all
RUN yum -y update
RUN yum -y install \
    automake \
    autoconf \
    bash-completion \
    bison \
    bzip2 \
    CUnit-devel \
    cyrus-sasl-devel \
    cyrus-sasl-plain \
    cyrus-sasl-md5 \
    file \
    flex \
    gcc \
    gcc-c++ \
    git \
    glib2-devel \
    gperf \
    groff \
    gzip \
    jansson-devel \
    krb5-devel \
    libdb-devel \
    libical-devel \
    libtool \
    libuuid-devel \
    libxml2-devel \
    make \
    mysql-devel \
    net-snmp-devel \
    net-tools \
    openldap-devel \
    openssl-devel \
    patch \
    perl-BSD-Resource \
    perl-Clone \
    perl-Config-IniFiles \
    perl-DateTime \
    perl-devel \
    perl-Digest-MD5 \
    perl-Digest-SHA \
    perl-File-chdir \
    perl-IO-Socket-INET6 \
    perl-Net-Server \
    perl-Sys-Syslog \
    perl-Test-Unit \
    perl-Unix-Syslog \
    perl-XML-Generator \
    php-cli \
    postgresql-devel \
    sqlite-devel \
    tar \
    tcp_wrappers \
    valgrind-devel \
    vim-enhanced \
    wget \
    words \
    xapian-core-devel

WORKDIR /tmp
RUN wget https://cgit.cyrus.foundation/docker/plain/packages/rawhide.tar.gz && \
    tar zxvf rawhide.tar.gz && \
    yum --nogpgcheck -y localinstall rawhide/*.rpm && \
    rm -rf /tmp/*

WORKDIR /srv
RUN git clone https://git.cyrus.foundation/diffusion/I/cyrus-imapd.git \
    cyrus-imapd.git

RUN git clone https://git.cyrus.foundation/diffusion/C/cassandane.git \
    cassandane.git

RUN groupadd -r saslauth ; \
    groupadd -r mail ; \
    useradd -c "Cyrus IMAP Server" -d /var/lib/imap \
    -g mail -G saslauth -s /bin/bash -r cyrus

WORKDIR /root
ENV PATH /srv/arcanist/bin/:$PATH
ENV IMAGE rawhide
ADD https://cgit.cyrus.foundation/docker/plain/.bashrc /root/.bashrc
ADD https://cgit.cyrus.foundation/docker/plain/.vimrc /root/.vimrc

WORKDIR /
ADD https://cgit.cyrus.foundation/docker/plain/entrypoint.sh /
ADD https://cgit.cyrus.foundation/docker/plain/functions.sh /
RUN chmod 755 /entrypoint.sh
ENTRYPOINT [ "/entrypoint.sh" ]
